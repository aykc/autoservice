.card.mb-3.shadow{:id => "#{dom_id order}"}
  .card-header.bg-transparent
    = link_to order_path(order) do
      .row
        .container
          %strong Order from #{order.created_at}
  .card-body
    .row
      .container.mb-2
        %p
          %strong Customer name:
          = order.customer_name
        %p
          %strong Phone number:
          = order.phone_number
        %p
          %strong Email:
          = order.email
        %mb-2
          = link_to "Edit this order", edit_order_path(order), class: "btn btn-sm btn-outline-warning"
          .d-inline-block
            = button_to "Destroy this order", order, method: :delete, class: "btn btn-sm btn-outline-danger"
        %mb-2
          %h2 Services:
          = render order.services
